{
  "name": "spotify",
  "version": "0.0.1",
  "description": "Express & Mongoose API - ES6 / NodeJS.",
  "main": "src/server.js",
  "repository": {
    "type": "git"
  },
  "license": "MIT",
  "private": true,
  "dependencies": {
    "body-parser": "^1.19.0",
    "express": "^4.17.1",
    "express-fileupload": "^1.1.5",
    "mongoose": "^5.6.2",
    "morgan": "^1.9.1",
    "rimraf": "^2.6.3"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^10.0.2",
    "babel-preset-node6": "^11.0.0",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "eslint": "^6.0.1",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.18.0",
    "mocha": "^6.1.4",
    "mongo-unit": "^1.4.4",
    "nodemon": "^1.19.1",
    "nyc": "^14.1.1"
  },
  "scripts": {
    "serve": "NODE_ENV=dev nodemon src/server.js --exec \"npm run lint -s && babel-node\"",
    "serve-win": "set NODE_ENV=dev&nodemon src/server.js --exec \"npm run lint -s && babel-node\"",
    "build": "babel src --out-dir build",
    "lint": "./node_modules/.bin/eslint --fix src",
    "test": "NODE_ENV=test mocha --require babel-register --require test/setup.js --recursive --exit --timeout 30000",
    "coverage": "nyc --reporter=lcov npm run test",
    "test-win": "set NODE_ENV=test&mocha --exit --timeout 30000",
    "test-real-mongo": "NODE_ENV=testRealMongo mocha --require babel-register --require test/setup.js --recursive --exit --timeout 30000",
    "test-real-mongo-win": "set NODE_ENV=testRealMongo&mocha --require babel-register --require test/setup.js --recursive --exit --timeout 30000",
    "test:watch": "NODE_ENV=test mocha --watch --recursive --require --require babel-register test/setup.js --timeout 30000",
    "test-win:watch": "set NODE_ENV=test&mocha --require babel-register --require test/setup.js --recursive --timeout 10000 --watch",
    "test-real-mongo-win:watch": "set NODE_ENV=testRealMongo&mocha --require babel-register --require test/setup.js --recursive --timeout 10000 --watch"
  }
}